# export orchestration vars
/usr/local/bin/opdemand-export

# source orchestration inputs as environment vars
. /var/cache/opdemand/inputs.sh

# update server repository
cd /var/lib/opdemand
git pull

# update puppet modules if they exist
if [ -d /usr/share/puppet/modules ] ; then
    cd /usr/share/puppet/modules
    git pull
fi